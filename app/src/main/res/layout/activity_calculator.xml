<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAsh"
    tools:context="com.shahadat.webcombined.CalculatorActivity">


    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn4"
        android:layout_alignParentStart="true"
        android:background="#212121"
        android:text="7"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn7"
        android:layout_alignBottom="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:background="#212121"
        android:text="8"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn8"
        android:layout_alignBottom="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:background="#212121"
        android:text="9"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn1"
        android:layout_alignParentStart="true"
        android:background="#212121"
        android:text="4"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn8"
        android:layout_toEndOf="@+id/btn7"
        android:background="#212121"
        android:text="5"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn8"
        android:background="#212121"
        android:text="6"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnPoint"
        android:layout_alignParentStart="true"
        android:background="#212121"
        android:text="1"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn5"
        android:layout_toEndOf="@+id/btn4"
        android:background="#212121"
        android:text="2"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnMemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn0"
        android:background="#212121"
        android:text="Memory"
        android:textColor="#827c7c"
        android:textSize="14sp"
        android:layout_below="@+id/btn2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn5"
        android:layout_toEndOf="@+id/btn2"
        android:background="#212121"
        android:text="3"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnReset"
        android:layout_alignParentStart="true"
        android:background="#212121"
        android:text="AC"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btn1"
        android:background="#212121"
        android:text="0"
        android:textColor="#827c7c"
        android:textSize="18sp"
        android:layout_below="@+id/btn1" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnAdd"
        android:layout_toEndOf="@+id/btn9"
        android:background="@color/colorPrimary"
        android:text="="
        android:textSize="24sp"
        tools:layout_height="60dp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn6"
        android:layout_alignBottom="@+id/btn6"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btn9"
        android:background="#212121"
        android:text="+"
        android:textColor="#827c7c"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnMplus"
        android:layout_toEndOf="@+id/btn9"
        android:background="#212121"
        android:text="-"
        android:textColor="#827c7c"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnMul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnDiv"
        android:layout_alignBottom="@+id/btnDiv"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnDiv"
        android:background="#212121"
        android:text="ร"
        android:textColor="#827c7c"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvControl"
        android:layout_toEndOf="@+id/btnDelete"
        android:background="#212121"
        android:text="รท"
        android:textColor="#827c7c"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnClear"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textColor="#212121"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvTemp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textColor="#212121"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnReset"
        android:layout_toEndOf="@+id/btnReset"
        android:background="#212121"
        android:text="C"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#212121"
        android:text="."
        android:textColor="#827c7c"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btnMplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnMminus"
        android:layout_alignBottom="@+id/btnMminus"
        android:layout_toEndOf="@+id/btn8"
        android:background="#212121"
        android:text="M+"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnMminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnMul"
        android:layout_toEndOf="@+id/btn9"
        android:background="#212121"
        android:text="M-"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn7"
        android:layout_alignParentStart="true"
        android:background="#212121"
        android:onClick="onReset"
        android:text="MR"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnMplus"
        android:layout_alignBottom="@+id/btnMplus"
        android:layout_toEndOf="@+id/btn7"
        android:background="#212121"
        android:onClick="onSave"
        android:text="MS"
        android:textColor="#827c7c"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:layout_above="@+id/tvControl"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnDelete" />

</RelativeLayout>

